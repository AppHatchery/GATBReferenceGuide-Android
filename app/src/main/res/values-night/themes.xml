<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GATBReferenceGuide" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/reddish</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="chapterBackgroundColor">#BEB0AC</item>
        <item name="chapterBackgroundColorTop">#A55C3C</item>
        <item name="colorBlackWhite">@color/dark_black</item>
        <item name="colorWhiteBlack">@android:color/white</item>

        <item name="savedTopBar">@color/dark_black</item>
        <item name="chartBackgroundColor">#823410</item>
        <item name="chartBackgroundColorTop">#BD998A</item>
        <item name="searchBackgroundColor">#823410</item>
        <item name="android:textColor">@color/white</item>

        <item name="actionBarStyle">@style/darkActionbar</item>
        <item name="android:windowBackground">@color/dark_black</item>

        <item name="toolbarColor">?chartBackgroundColor</item>
        <item name="colorGrayWhite">@color/neutral_200</item>
        <item name="colorWhiteGray">@color/neutral_900</item>

    </style>


    <style name="darkActionbar" parent="Widget.AppCompat.ActionBar">
        <item name="background">?chartBackgroundColor</item>
    </style>
</resources>