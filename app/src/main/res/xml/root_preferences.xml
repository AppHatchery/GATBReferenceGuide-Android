<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Appearance">

        <ListPreference
            android:defaultValue="system"
            android:dialogTitle="Choose theme"
            android:entries="@array/theme_entries"
            android:entryValues="@array/theme_values"
            android:key="@string/theme_key"
            android:title="@string/theme"
            app:iconSpaceReserved="false" />


        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="Choose font"
            android:entries="@array/font_entries"
            android:entryValues="@array/font_values"
            android:key="@string/font_key"
            android:title="@string/font"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="More">

        <PreferenceScreen
            app:iconSpaceReserved="false"
            app:key="@string/privacy_policy_key"
            app:title="@string/privacy_policy" />


        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/about_us_key"
            app:title="@string/about_us" />


        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/contact_us_key"
            app:title="@string/contact_us" />
    </PreferenceCategory>


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Reset">

        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/reset_key"
            app:summary="@string/reset_summary"
            app:title="@string/reset_title" />

    </PreferenceCategory>

</PreferenceScreen>